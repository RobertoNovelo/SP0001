<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fffffc"
            android:id="@+id/scrollView">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fffffc">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_service_4"
                android:id="@+id/label_service_4"
                android:textSize="19dp"
                android:textColor="#366e78"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txt_service_4"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_edit_text_service"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:layout_marginRight="20dp"
                android:capitalize="sentences"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.- Observaciones"
                android:id="@+id/label_service_5"
                android:textSize="19dp"
                android:textColor="#366e78"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:id="@+id/txt_service_5"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_edit_text_service"
                android:paddingTop="5dp"
                android:singleLine="false"
                android:paddingBottom="5dp"
                android:layout_marginRight="20dp"
                android:capitalize="sentences"
                android:gravity="top"/>
    </LinearLayout>
</ScrollView>

