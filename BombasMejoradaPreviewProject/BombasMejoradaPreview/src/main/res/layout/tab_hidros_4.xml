<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:showDividers="middle"
              android:divider="?android:dividerVertical"
              android:dividerPadding="10dp"
              android:background="#FFFFFF">


    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
            android:layout_weight=".2">

        <com.smartplace.effects.BounceScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:isScrollContainer="true"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:divider="?android:dividerVertical"
                android:dividerPadding="10dp"
                android:background="#FFFFFF"
                >

                <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Instalación:"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Default"
                android:padding="10dp"
                android:id="@+id/instalacionHidros"
                android:textColor="#ff1212b1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

                <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Salidas:"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:padding="10dp"
                android:id="@+id/salidasHidros"
                android:textColor="#ff1212b1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

                <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Factor por salida:"
                android:padding="10dp"
                android:id="@+id/textView5"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0 lpm/salida"
                android:padding="10dp"
                android:id="@+id/factorSalida"
                android:textColor="#ff1212b1"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Desnivel total \nmáximo:"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0 mts"
                            android:padding="10dp"
                            android:id="@+id/desnivelMax"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Longitud de\ntubería máxima:"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0 mts"
                            android:padding="10dp"
                            android:id="@+id/longitudTuberia"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Presión en salida:"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0 psi"
                            android:padding="10dp"
                            android:id="@+id/presionSalida"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Porcentaje máximo de\npérdidas en la conducción"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0%"
                            android:padding="10dp"
                            android:id="@+id/porcentajePerdidas"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Gasto pico máximo:"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0 lpm"
                            android:padding="10dp"
                            android:id="@+id/gastoPico"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Carga dinámica\ntotal"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0 psi"
                            android:padding="10dp"
                            android:id="@+id/cargaDinamica"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Diámetro de tubo recomendado\nen la línea principal:"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text='0"'
                            android:padding="10dp"
                            android:id="@+id/diametroTubo"
                            android:textColor="#ff1212b1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

    </com.smartplace.effects.BounceScrollView>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Enviar    "
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_button_dark_blue"
                android:id="@+id/enviarbutton"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>