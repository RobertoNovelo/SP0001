<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#d1d6db">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="Ver Mapa"
            android:textSize="16sp"
            android:id="@+id/btnViewMap"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:shadowColor="#d1d6db"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:id="@+id/address"
        android:textSize="16sp"
            android:textColor="#040404"
            android:autoText="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center_vertical"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tel: (33)38118517"
        android:textSize="16sp"
            android:id="@+id/btnLocalTel"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tel: 01800 2266236"
        android:textSize="16sp"
            android:id="@+id/btnCountryTel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="enlinea@bombasmejorada.com"
        android:textSize="16sp"
            android:id="@+id/btnSendMail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="www.bombasmejorada.com"
        android:textSize="16sp"
            android:id="@+id/btnWebBombas"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="www.sistemasdebombeo.com"
        android:textSize="16sp"
            android:id="@+id/btnWebSistemas"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/contact_info_buttons"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

</LinearLayout>